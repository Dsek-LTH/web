{
  "nodeModulesDir": "auto",
  "tasks": {
    // --- Meta Tasks (Orchestration) ---
    "prepare": {
      "description": "Run all generation tools needed for development",
      "dependencies": ["generate", "paraglide", "seed-generate"]
    },
    "ci-check": {
      "dependencies": ["lint", "format", "check"]
    },

    // --- Development & Build ---
    "dev": "deno run -A npm:vite dev",
    "build": "deno run -A npm:vite build",
    "preview": "deno run -A npm:pm2 start prod/ecosystem.config.cjs --no-daemon",
    "setup-dev": "deno run -A npm:vite-node dev/setup.ts",

    // --- Linting & Formatting (Idiomatic Deno) ---
    "lint": "deno lint",
    "lint:fix": "deno lint --fix",
    "format": "deno fmt --check",
    "format:fix": "deno fmt",

    // --- Type Checking & Svelte ---
    "sync": "deno run -A npm:@sveltejs/kit sync",
    "check": "deno task sync && deno run -A npm:svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "deno task sync && deno run -A npm:svelte-check --tsconfig ./tsconfig.json --watch",

    // --- Testing ---
    "test": "deno task test:unit",
    "test:integration": "deno run -A npm:playwright test",
    "test:unit": "deno run -A npm:vitest run --retry 2",

    // --- Database & Schema ---
    "generate": "deno run -A npm:zenstack generate && deno run -A npm:prisma generate",
    "migrate": "deno run -A npm:zenstack generate && deno run -A npm:prisma migrate dev && deno task seed-sync",
    "seed": "deno run -A npm:prisma db seed",
    "seed-generate": "deno run -A npm:@snaplet/seed generate",
    "seed-sync": "deno run -A npm:@snaplet/seed sync",
    "prisma-case-format": "deno run -A npm:prisma-case-format -f src/database/prisma/schema.prisma",

    // --- Localization ---
    "paraglide": "deno run -A npm:@inlang/paraglide-js compile --project ./project.inlang --outdir ./src/translations/paraglide"
  },
